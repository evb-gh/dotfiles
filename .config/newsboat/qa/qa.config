# general settings
auto-reload yes
max-items 0


browser         "open"
player          "mpv"
download-path   "~/Downloads/%n"
save-path       "~/Downloads"
reload-threads  20
cleanup-on-quit yes
text-width      74

# unbind keys
#unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit


macro y set browser "mpv %u"; open-in-browser ; set browser "open %u"

# solarized
color background         default   default
color listnormal         default   default
color listnormal_unread  default   default
color listfocus          black     cyan
color listfocus_unread   black     cyan
color info               default   black
color article            default   default

